			choix 1 {
				reponse "[Si c'est vous, je vais vous tuer]"
				donne 1 Innocenttue
				consomme 1 Pistole
			}
			choix 2 {
				reponse "[Ok, bonne continuation, au revoir]"
			}
		}
	    
	}
	personne Suspect2Toulouse{
		localisation Toulouse
		visible condition Policier{
	    		objets requis CarteEnquete 
	    		objets interdits Innocenttue	    			   
	    	}   
	    actif true
	    obligatoire true
	    interactions interaction {
			question "[Question: Bonjour inspecteur, j'était en train de pécher ce dimanche à Paris, sinon rien de spécial]"
			choix 1 {
				reponse "[AAAAh, votre alibi est nulle, c'est vous]"
				donne 1 CouplableMenote
			}
			choix 2 {
				reponse "[C'est pas vous, vous m'avez convaincu, je vais arreter quelqu'un d'autre]"
				donne 1 InnocentMenote
			}
		}
	    
	}
}

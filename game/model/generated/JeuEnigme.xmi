<?xml version="1.0" encoding="UTF-8"?>
<game:Jeu xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:game="http://www.Game.game"
    xsi:schemaLocation="http://www.Game.game Game.ecore"
    name="JeuEnigme">
  <territoire/>
  <explorateur
      place="//@elementsjeu.0"
      tailleDispo="4">
    <objets
        name="tentative"
        qte="3"
        taille="1"/>
  </explorateur>
  <elementsjeu
      xsi:type="game:Lieu"
      name="Enigme"
      personnes="//@elementsjeu.1"/>
  <elementsjeu
      xsi:type="game:Personne"
      name="Sphinx"
      place="//@elementsjeu.0"
      obligatoire="true"
      interactions="//@elementsjeu.2">
    <visible
        name="sphinxVisible"
        connaissanceInterdite="//@elementsjeu.5"
        objetRequis="//@elementsjeu.4/@objetCons.0"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Interaction"
      name="Question"
      question="Gagner"
      personne="//@elementsjeu.1"
      choix="//@elementsjeu.3 //@elementsjeu.4"/>
  <elementsjeu
      xsi:type="game:Choix"
      name="vrai"
      reponse="oui"
      bonne="true"
      connaisDon="//@elementsjeu.5"
      interaction="//@elementsjeu.2">
    <objetCons
        name="prend2Tentatives"
        qte="2"
        objet="//@explorateur/@objets.0"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Choix"
      name="faux"
      reponse="non"
      interaction="//@elementsjeu.2">
    <objetCons
        name="prendTentative"
        qte="1"
        objet="//@explorateur/@objets.0"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Connaissance"
      name="Reussite"
      choix="//@elementsjeu.3"/>
  <elementsjeu
      xsi:type="game:Lieu"
      name="Succes"
      nature="fin"/>
  <elementsjeu
      xsi:type="game:Chemin"
      name="victoire"
      pred="//@elementsjeu.0"
      succ="//@elementsjeu.6"
      obligatoire="true">
    <visible
        name="vicVisible"
        connaissanceRequise="//@elementsjeu.5"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Chemin"
      name="defaite"
      pred="//@elementsjeu.0"
      succ="//@elementsjeu.9"
      obligatoire="true">
    <visible
        name="defVisible"
        connaissanceInterdite="//@elementsjeu.5"
        objetInterdit="//@elementsjeu.10"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Lieu"
      name="Echec"
      nature="fin"/>
  <elementsjeu
      xsi:type="game:QteObjet"
      name="tentative1"
      qte="1"/>
</game:Jeu>

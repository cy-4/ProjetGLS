<?xml version="1.0" encoding="UTF-8"?>
<game:Jeu xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:game="http://www.Game.game"
    xsi:schemaLocation="http://www.Game.game Game.ecore"
    name="Enigme">
  <territoire/>
  <explorateur
      tailleDispo="4"/>
  <elementsjeu
      xsi:type="game:Objet"
      name="Tentative"
      qte="3"
      taille="1"/>
  <elementsjeu
      xsi:type="game:Lieu"
      name="Enigme"
      personnes="//@elementsjeu.2"/>
  <elementsjeu
      xsi:type="game:Personne"
      name="Sphinx"
      place="//@elementsjeu.1"
      obligatoire="true"
      interactions="//@elementsjeu.3">
    <visible
        name="sphinxVisible"
        connaissanceInterdite="//@elementsjeu.6"
        objetRequis="//@elementsjeu.5/@objetCons.0"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Interaction"
      name="Question"
      question="Gagner"
      personne="//@elementsjeu.2"
      choix="//@elementsjeu.4 //@elementsjeu.5"/>
  <elementsjeu
      xsi:type="game:Choix"
      name="vrai"
      reponse="oui"
      bonne="true"
      connaisDon="//@elementsjeu.6"
      interaction="//@elementsjeu.3">
    <objetCons
        name="Prend2Tentatives"
        qte="2"
        objet="//@elementsjeu.0"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Choix"
      name="faux"
      reponse="non"
      interaction="//@elementsjeu.3">
    <objetCons
        name="PrendTentative"
        qte="1"
        objet="//@elementsjeu.0"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Connaissance"
      name="Reussite"
      choix="//@elementsjeu.4"/>
  <elementsjeu
      xsi:type="game:Lieu"
      name="Succes"
      nature="fin"/>
  <elementsjeu
      xsi:type="game:Chemin"
      name="Victoire"
      pred="//@elementsjeu.1"
      succ="//@elementsjeu.7"
      obligatoire="true">
    <visible
        name="VicVisible"
        connaissanceRequise="//@elementsjeu.6"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Chemin"
      name="Defaite"
      pred="//@elementsjeu.1"
      succ="//@elementsjeu.10"
      obligatoire="true">
    <visible
        name="defVisible"
        connaissanceInterdite="//@elementsjeu.6"
        objetInterdit="//@elementsjeu.0"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Lieu"
      name="Echec"
      nature="fin"/>

<?xml version="1.0" encoding="UTF-8"?>
<game:Jeu xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:game="http://www.Game.game"
    xsi:schemaLocation="http://www.Game.game Game.ecore"
    name="JeuEnigme">
  <territoire/>
  <explorateur
      place="//@elementsjeu.3"
      tailleDispo="1">
    <objets
        name="Tentative"
        qte="3"
        taille="1"/>
  </explorateur>
  <elementsjeu
      xsi:type="game:Connaissance"
      name="Reussite"/>
  <elementsjeu
      xsi:type="game:Personne"
      name="Sphinx"
      place="//@elementsjeu.3"
      obligatoire="true">
    <visible
        name="SphinxVisible"
        quantite="1"
        objetsRequis="//@elementsjeu.2"/>
    <interactions
        name="Question"
        question="[Question...]">
      <choix
          name="Bonne"
          reponse="oui"
          bonne="true"
          connaisDon="//@elementsjeu.0">
        <objetCons
            qte="1"
            objet="//@elementsjeu.2"/>
      </choix>
      <choix
          name="Mauvaise"
          reponse="non">
        <objetCons
            qte="1"
            objet="//@elementsjeu.2"/>
      </choix>
    </interactions>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Objet"
      name="Tentative"
      qte="3"
      taille="1"/>
  <elementsjeu
      xsi:type="game:Lieu"
      name="Enigme"/>
  <elementsjeu
      xsi:type="game:Lieu"
      name="Succes"
      nature="fin"/>
  <elementsjeu
      xsi:type="game:Lieu"
      name="Echec"
      nature="fin"/>
  <elementsjeu
      xsi:type="game:Chemin"
      name="Victoire"
      pred="//@elementsjeu.3"
      succ="//@elementsjeu.4"
      obligatoire="true">
    <visible
        name="ReussiteObtenue"
        connaissancesRequises="//@elementsjeu.0"/>
  </elementsjeu>
  <elementsjeu
      xsi:type="game:Chemin"
      name="Defaite"
      pred="//@elementsjeu.3"
      succ="//@elementsjeu.5"
      obligatoire="true">
    <visible
        name="PlusDeTentatives"
        connaissancesInterdites="//@elementsjeu.0"
        quantite="1"
        objetsInterdits="//@elementsjeu.2"/>
  </elementsjeu>
</game:Jeu>
